@page
@model GlamTreasures.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Categorii</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Creeaza o noua categorie
        </a>
    </div>

    <div class="row">
        @if (Model.Categories != null && Model.Categories.Any())
        {
            @foreach (var item in Model.Categories)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="btn-group w-100">
                                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>Editare
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-outline-info">
                                    <i class="fas fa-info-circle me-1"></i>Detalii
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-1"></i>Stergere
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
</div>