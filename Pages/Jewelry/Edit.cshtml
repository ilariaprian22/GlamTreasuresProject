@page
@using Microsoft.AspNetCore.Authorization
@model GlamTreasures.Pages.Jewelry.EditModel
@{
    ViewData["Title"] = "Edit Jewelry Item";
}
@attribute [Authorize(Roles = "Admin")]

<div class="container">
    <h1>Edit Jewelry Item</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="JewelryItem.ID" />

                <div class="mb-3">
                    <label asp-for="JewelryItem.Name" class="form-label"></label>
                    <input asp-for="JewelryItem.Name" class="form-control" />
                    <span asp-validation-for="JewelryItem.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Description" class="form-label"></label>
                    <textarea asp-for="JewelryItem.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="JewelryItem.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Price" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="JewelryItem.Price" class="form-control" type="number" step="0.01" min="0" />
                    </div>
                    <span asp-validation-for="JewelryItem.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.CategoryID" class="form-label">Category</label>
                    <div class="input-group">
                        <select asp-for="JewelryItem.CategoryID" class="form-select" asp-items="Model.CategoryList">
                            <option value="">-- Select Category --</option>
                        </select>
                        <a asp-page="/Categories/Create" class="btn btn-secondary">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="form-text">Don't see your category? <a asp-page="/Categories/Create">Create a new one</a></div>
                    <span asp-validation-for="JewelryItem.CategoryID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Material" class="form-label"></label>
                    <input asp-for="JewelryItem.Material" class="form-control" />
                    <span asp-validation-for="JewelryItem.Material" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.StockQuantity" class="form-label"></label>
                    <input asp-for="JewelryItem.StockQuantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="JewelryItem.StockQuantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.ImageUrl" class="form-label"></label>
                    <input asp-for="JewelryItem.ImageUrl" class="form-control" />
                    <span asp-validation-for="JewelryItem.ImageUrl" class="text-danger"></span>
                    <small class="form-text text-muted">Enter the URL of the jewelry image</small>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.DateAdded" class="form-label"></label>
                    <input asp-for="JewelryItem.DateAdded" class="form-control" type="datetime-local" />
                    <span asp-validation-for="JewelryItem.DateAdded" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="JewelryItem.IsSpecialOffer" class="form-check-input" />
                    <label asp-for="JewelryItem.IsSpecialOffer" class="form-check-label"></label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}