@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Authorization
@attribute [Authorize(Roles = "Admin")]
@model GlamTreasures.Pages.Jewelry.CreateModel

<div class="container">
    <h1>Adauga o noua bijuterie</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Name" class="form-label">Nume</label>
                    <input asp-for="JewelryItem.Name" class="form-control" />
                    <span asp-validation-for="JewelryItem.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Description" class="form-label">Descriere</label>
                    <textarea asp-for="JewelryItem.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="JewelryItem.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Price" class="form-label">Pret</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="JewelryItem.Price" class="form-control" type="number" step="0.01" min="0" />
                    </div>
                    <span asp-validation-for="JewelryItem.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.CategoryID" class="form-label">Categorie</label>
                    <div class="input-group">
                        <select asp-for="JewelryItem.CategoryID" class="form-select" asp-items="Model.CategoryList">
                            <option value="">-- Selecteaza Categoria --</option>
                        </select>
                        <a asp-page="/Categories/Create" class="btn btn-secondary">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="form-text">Nu exista o categorie? <a asp-page="/Categories/Create">Creeaza una noua</a></div>
                    <span asp-validation-for="JewelryItem.CategoryID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.Material" class="form-label">Material</label>
                    <input asp-for="JewelryItem.Material" class="form-control" />
                    <span asp-validation-for="JewelryItem.Material" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.StockQuantity" class="form-label">Cantitate</label>
                    <input asp-for="JewelryItem.StockQuantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="JewelryItem.StockQuantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JewelryItem.ImageUrl" class="form-label">Imagine</label>
                    <input asp-for="JewelryItem.ImageUrl" class="form-control" />
                    <span asp-validation-for="JewelryItem.ImageUrl" class="text-danger"></span>
                    <small class="form-text text-muted">Adauga un URL al imaginii</small>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="JewelryItem.IsSpecialOffer" class="form-check-input" />
                    <label asp-for="JewelryItem.IsSpecialOffer" class="form-check-label">Oferta speciala</label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Creeaza
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Inapoi la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}